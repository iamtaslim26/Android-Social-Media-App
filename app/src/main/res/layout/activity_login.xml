<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".LoginActivity">


    <ImageView
        android:id="@+id/imageview_login"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:src="@drawable/logo"/>

    <EditText
        android:id="@+id/login_email_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageview_login"
        android:background="@drawable/inputs"
        android:ems="10"
        android:padding="10dp"
        android:hint="Email Id"
        android:drawableLeft="@drawable/email"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_email_id"
        android:background="@drawable/inputs"
        android:ems="10"
        android:padding="10dp"
        android:hint="Password"
        android:drawableLeft="@drawable/password"
        android:layout_marginTop="20dp"/>


    <Button
        android:id="@+id/login_account_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_password"
        android:layout_margin="30dp"
        android:padding="20dp"
        android:background="@drawable/buttons"
        android:text="Login"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/login_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_account_btn"
        android:text="Don't You Have an Account? so just Create it"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/or_login_with"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_text"
        android:text="Or Login With,"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/or_login_with"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_facebook"
            android:src="@drawable/facebook"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/login_twitter"
            android:src="@drawable/twitter"
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/login_google"
            android:src="@drawable/google"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"/>



    </LinearLayout>

    <TextView
        android:id="@+id/forgot_password_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Forgot Your Password?"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:textSize="25dp"
        android:textStyle="bold"/>




</RelativeLayout>