<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonProfileActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/person_proifle_activity_imageview"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/profile_icon"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"/>



            <TextView
                android:id="@+id/person_proifle_activity_profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_proifle_activity_imageview"
                android:layout_marginTop="10dp"
                android:text="Profile Name"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/person_profile_activity_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_proifle_activity_profile_name"
                android:layout_marginTop="10dp"
                android:text="Username"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/person_profile_activity_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_profile_activity_username"
                android:layout_marginTop="10dp"
                android:text="Hey There I am using an Android App
                        made by Taslim "
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/person_profile_activity_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="Country"
                android:layout_below="@+id/person_profile_activity_status"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/person_profile_activity_dateofbirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_profile_activity_country"
                android:layout_marginTop="10dp"
                android:text="Date of Birth"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/person_profile_activity_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_profile_activity_dateofbirth"
                android:layout_marginTop="10dp"
                android:text="Gender"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/person_profile_activity_relatioshipstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_profile_activity_gender"
                android:layout_marginTop="10dp"
                android:text="Relationship Status"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/person_profile_activity_send_request"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="Send Friend Request"
                android:background="#67c415"
                android:layout_below="@id/person_profile_activity_relatioshipstatus"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="15dp"/>

            <Button
                android:id="@+id/person_profile_activity_cancel_request"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="Cancel Friend Request"
                android:background="#ed4c54"
                android:layout_below="@id/person_profile_activity_send_request"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                />


        </RelativeLayout>

    </ScrollView>


</RelativeLayout>