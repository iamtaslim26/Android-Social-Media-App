<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".AddPostActivity">

    <include
        android:id="@+id/add_post_toolbar"
        layout="@layout/app_bar_layout"/>

    <ImageView
        android:id="@+id/select_image_in_post_activity"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_below="@+id/add_post_toolbar"
        android:src="@drawable/select_image"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"/>
    <EditText
        android:id="@+id/write_post_about_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_image_in_post_activity"
        android:layout_marginTop="25dp"
        android:background="@drawable/inputs"
        android:padding="20dp"
        android:hint="Write Something about this post. . ."
        android:layout_margin="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"/>

    <Button
        android:id="@+id/post_activity_update_button"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/write_post_about_picture"
        android:layout_marginTop="25dp"
        android:text="Update"
        android:background="@drawable/inputs"
        android:textColor="@color/black"/>




</RelativeLayout>